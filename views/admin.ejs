<% include partials/header.ejs %>

<div class="container mt-4">
    <h1 class="display-4 text-center">Admin Login</h1>
    <div>
        <form action="/admin" class="px-4 py-3" method="POST">
            <div class="row">
                <div class="col-10 offset-2">
                    <div class="form-group">
                        <label for="username">Admin Username:</label>
                        <input type="username" class="form-control" name="username" placeholder="Admin Username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <button class="btn btn-primary btn-sm">Submit</button>&nbsp;&nbsp;
                </div>
            </div>
        </form>
    </div>
</div>

